{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with Clang",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-stdlib=libc++",
                "game_loop.cpp",
                "Player.cpp",
                "MapBlocks.cpp",
                "-o",
                "game_loop.o",
                "--debug",
                "-lSDL2",
                "-lSDL2_image",
                "-lSDL2_ttf",
                "-I/usr/local/include/SDL2",
                "-L/usr/local/lib",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}